{
  "name": "hronica",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "pnpm build:remix && pnpm build:server && pnpm build:gen:sitemap",
    "build:remix": "remix vite:build",
    "build:server": "tsx server/build.ts",
    "build:gen:sitemap": "tsx ./scripts/generate-sitemap.ts > public/sitemap.xml",
    "dev": "remix vite:dev",
    "dev:vite": "vite",
    "start": "NODE_ENV=production node ./build/server/index.js",
    "start:remix": "remix-serve ./build/server/remix.js",
    "format": "pnpm run /^format:/",
    "format:prettier": "prettier -w --plugin-search-dir=. .",
    "format:eslint": "eslint --fix --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint": "pnpm run /^lint:/",
    "lint:prettier": "prettier --check --plugin-search-dir=. .",
    "lint:eslint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:typescript": "tsc -b",
    "typecheck": "tsc",
    "docker": "pnpm run /^docker:/",
    "docker:build": "docker build -t hronica-2 .",
    "docker:run": "docker run -it -p 3000:3000 --env-file .env hronica-2"
  },
  "dependencies": {
    "@hono/node-server": "^1.7.0",
    "@hono/vite-dev-server": "^0.5.0",
    "@nasa-gcn/remix-seo": "^2.0.0",
    "@portabletext/react": "^3.0.11",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-separator": "^1.0.3",
    "@remix-run/dev": "^2.6.0",
    "@remix-run/node": "^2.6.0",
    "@remix-run/react": "^2.6.0",
    "@remix-run/serve": "^2.6.0",
    "@sanity/asset-utils": "^1.3.0",
    "@sanity/client": "^6.12.3",
    "@sanity/image-url": "^1.0.2",
    "@sanity/overlays": "^2.3.9",
    "@sanity/react-loader": "^1.8.2",
    "@sanity/ui": "^2.0.1",
    "@sanity/vision": "^3.27.1",
    "@t3-oss/env-core": "^0.8.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "groq": "^3.27.1",
    "hono": "^3.12.10",
    "isbot": "^4.4.0",
    "lru-cache": "^10.2.0",
    "lucide-react": "^0.321.0",
    "million": "^3.0.2",
    "pretty-cache-header": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-flat-routes": "^0.6.4",
    "remix-hono": "^0.0.15",
    "remix-utils": "^7.5.0",
    "rxjs": "^7.8.1",
    "sanity": "^3.27.1",
    "sanity-plugin-iframe-pane": "^3.1.3",
    "tailwind-merge": "^2.2.1",
    "unplugin-turbo-console": "^1.2.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.10",
    "@types/react": "^18.2.53",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "@unlighthouse/vite": "^0.10.6",
    "autoprefixer": "^10.4.17",
    "esbuild": "^0.20.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-tailwindcss": "^3.14.1",
    "knip": "^4.3.1",
    "postcss": "^8.4.33",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "remix-development-tools": "^3.7.4",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "engines": {
    "node": "20"
  }
}
